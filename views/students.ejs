<div class="d-flex" id="wrapper">
  <!-- Page Content -->
  <div id="page-content-wrapper">
    <% include ./partials/admin-navbar %>

    <div class="container">
      <h1 class="mt-4">All Users</h1>
      <% include ./partials/messages %>
      <table class="table table-striped table-inverse table-responsive">
        <thead class="thead-inverse">
          <tr>
            <th>USER ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <% if(loggedInUser.role == 'admin') {%>
              <td>Options</td>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% if (usersObj.length > 0) { %> <% usersObj.forEach((user) => { %>
          <tr>
            <td scope="row"><%= user._id %></td>
            <td><%= user.name %></td>
            <td><%= user.email %></td>
            <td><%= user.role %></td>
            <% if(loggedInUser.role == 'admin') {%>
            <td>
              <a
                href="/users/delete/<%= user._id %>"
                class="text-danger"
                onclick="return confirm('Are you sure to delete the user?')"
              >
                Delete
              </a>
              <!-- |
              <a
                href="/students?changeRole=<%= user.role %>&id=<%= user._id %>"
                class="text-primary"
              >
                Change Role
              </a> -->
              |
              <a
                href="/edit_student/<%= user._id %>"
                class="text-primary"
              >
                Edit
              </a>
            </td>
            <% } %>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="4">No user found</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- /#page-content-wrapper -->
</div>
