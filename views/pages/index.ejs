<div class="d-flex" id="wrapper">
  <!-- Page Content -->
  <div id="page-content-wrapper">
    <% include ../partials/admin-navbar %>

    <div class="container">
      <h1 class="mt-4">All Pages</h1>
      <% include ../partials/messages %>
      
      <table class="table table-striped table-inverse table-responsive">
        <thead class="thead-inverse">
          <tr>
            <td colspan="6">
              <a href="/pages/add" class="btn btn-primary float-right">
                    Add New Page
              </a>
            </td>
          </tr>
          <tr>
            <th>#</th>
            <th>Title</th>
            <th>Slug</th>
            <th>Menu</th>
            <th>Status</th>
            <td>Options</td>
          </tr>
        </thead>
        <tbody>
          <% if (pages.length > 0) { %> <% pages.forEach((page, idx) => { %>
          <tr>
            <td scope="row"><%= idx + 1 %></td>
            <td><%= page.title %></td>
            <td><%= page.slug %></td>
            <td><%= page.menu %></td>
            <td><%= page.status %></td>
            <td>
              <a
                href="/pages/delete/<%= page._id %>"
                class="text-danger"
                onclick="return confirm('Are you sure to delete the page?')"
              >
                Delete
              </a>
              |
              <a
                href="/pages/edit/<%= page._id %>"
                class="text-primary"
              >
                Edit
              </a>
            </td>
          </tr>
          <% }) %> <% } else { %>
          <tr>
            <td colspan="6">No pages found</td>
          </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <!-- /#page-content-wrapper -->
</div>
